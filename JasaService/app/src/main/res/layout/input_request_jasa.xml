<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
    >

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        >
        <Button android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:id="@+id/btn_back_input_request"
            android:layout_weight="0.5"
            android:background="@drawable/shape_radius_layout"
            />


        <Button android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:id="@+id/btn_submit_input_request"
            android:layout_weight="0.5"
            android:background="@drawable/shape_radius_layout"
            />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_view_jasa_input_request"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/spinner_jasa_service"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/layout_button"/>

    <Spinner
        android:id="@+id/spinner_input_request"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:spinnerMode="dialog"
        android:visibility="invisible"
        />


</RelativeLayout>
