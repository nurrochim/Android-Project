<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/header"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="6mm"
                    android:layout_height="6mm"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="1mm"
                    android:background="@android:color/white">

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My Account"
                    android:textSize="2sp"
                    android:id="@+id/textCustomerName" />

                <LinearLayout
                    android:layout_width="6mm"
                    android:layout_height="6mm"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="1mm"
                    android:background="@android:color/white">
                    <!--<ImageButton-->
                    <!--android:layout_width="10mm"-->
                    <!--android:layout_height="10mm"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:id="@+id/btnAdd"-->
                    <!--android:src="@drawable/plus_48"-->
                    <!--android:layout_column="2" />-->
                </LinearLayout>

            </TableRow>

        </TableLayout>
        <View style="@style/Divider"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/header"
        android:background="@drawable/shape_radius_layout"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/main_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="@drawable/account_background_mountain_ceo"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <!--<android.support.v7.widget.CardView-->
                        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
                        <!--android:id="@+id/card_view"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_width="70dp"-->
                        <!--android:layout_height="70dp"-->
                        <!--card_view:cardCornerRadius="35dp"-->
                        <!--android:gravity="center"-->
                        <!--android:layout_marginLeft="2mm"-->

                        <!--android:layout_marginBottom="3dp"-->

                        <!--&gt;-->
                        <!--<ImageView-->
                            <!--android:layout_width="8mm"-->
                            <!--android:layout_height="8mm"-->
                            <!--android:id="@+id/imageAvatar"-->
                            <!--android:src="@drawable/account"-->
                            <!--android:scaleType="fitXY"-->
                            <!--android:adjustViewBounds="true"/>-->
                    <!--</android.support.v7.widget.CardView>-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Candra Yudhatama"
                        android:gravity="center"
                        android:background="@color/material_grey_50"
                        android:alpha="0.8"
                        android:layout_marginLeft="5mm"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Head Office"
                        android:gravity="center"
                        android:background="@color/material_grey_50"
                        android:alpha="0.8"

                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/account_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:gravity="center"
                />
            <View style="@style/Divider"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center"
                android:weightSum="1"
                android:background="@drawable/shape_radius_layout">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_weight="0.5"
                    />
                <!--<ImageButton-->
                    <!--android:layout_width="7mm"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_gravity="top"-->
                    <!--android:layout_marginRight="30dp"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:id="@+id/btnChangePass"-->
                    <!--android:src="@drawable/arrow_05x"-->
                    <!--android:layout_weight="0.1"/>-->
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center"
                android:weightSum="1"
                android:background="@drawable/shape_radius_layout">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_weight="0.5"
                    />
                <!--<ImageButton-->
                    <!--android:layout_width="7mm"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_gravity="top"-->
                    <!--android:layout_marginRight="30dp"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:id="@+id/btnLogOut"-->
                    <!--android:src="@drawable/arrow_05x"-->
                    <!--android:layout_weight="0.1"/>-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>