<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_profil_penyedia_jasa"
        android:background="@drawable/shape_radius_layout"
        android:padding="10px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_alignParentLeft="true"
            android:id="@+id/layout_image_profil">
            <ImageView
                android:id="@+id/image_profil_request_order"
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/account"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/layout_image_profil"
            android:layout_marginLeft="10px">
            <TextView
                android:id="@+id/txt_service_name_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service AC"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="2"
                >
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dikerjakan Oleh"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="12sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/txt_user_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rochim"
                        android:textSize="12sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hasil Service"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="12sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/txt_hasil_service_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sangat Bagus"
                        android:textSize="12sp"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ulasan"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="12sp"
                        android:layout_marginLeft="5px"
                        android:layout_marginRight="5px"
                        />
                    <TextView
                        android:id="@+id/txt_ulasan_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terimakasih... Service AC nya sangat baik"
                        android:textSize="12sp"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>