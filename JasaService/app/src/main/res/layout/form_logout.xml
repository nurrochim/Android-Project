<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/shape_radius_layout"
        android:padding="15px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda yakin akan keluar ?"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semua data history anda"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="akan terhapus"
            android:gravity="center"
            android:textSize="20sp"
            />
        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1.5mm"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:layout_weight="0.5"
                />
            <Button android:text="Logout"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:id="@+id/btn_logout"
                android:layout_weight="0.5"
                android:background="@drawable/shape_radius_layout"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>